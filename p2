<script>
    // --- Utilidades del Sistema ---
    
    function showStatus(id, msg, type) {
        const el = document.getElementById(id);
        el.className = 'status ' + type;
        el.innerText = msg;
        el.style.display = 'block';
        setTimeout(() => el.style.display = 'none', 4000);
    }

    function openTab(tabName) {
        document.querySelectorAll('.tab-content').forEach(t => t.classList.remove('active'));
        document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
        document.getElementById(tabName).classList.add('active');
        event.currentTarget.classList.add('active');
    }

    function clearFields(prefix) {
        if(prefix === 'b64') {
            document.getElementById('b64Input').value = '';
            document.getElementById('b64Output').value = '';
        } else {
            document.getElementById('cryptoInput').value = '';
            document.getElementById('cryptoKey').value = '';
            document.getElementById('cryptoOutput').value = '';
        }
    }

    function downloadText(elementId) {
        const text = document.getElementById(elementId).value;
        if (!text) return showStatus(elementId === 'b64Output' ? 'status-b64' : 'status-crypto', 'Nada para descargar', 'error');

        const blob = new Blob([text], { type: 'text/plain' });
        const anchor = document.createElement('a');
        anchor.download = 'resultado_' + new Date().getTime() + '.txt';
        anchor.href = window.URL.createObjectURL(blob);
        anchor.click();
        window.URL.revokeObjectURL(anchor.href);
    }

    function copyToClipboard(elementId) {
        const copyText = document.getElementById(elementId);
        copyText.select();
        document.execCommand("copy");
        showStatus(elementId === 'b64Output' ? 'status-b64' : 'status-crypto', 'Copiado al portapapeles', 'success');
    }

    // --- L√≥gica Base64 (Soporte UTF-8) ---
    // Usamos TextEncoder/Decoder para manejar correctamente emojis y acentos

    function processBase64(action) {
        const input = document.getElementById('b64Input').value;
        const outputEl = document.getElementById('b64Output');
        
        if (!input) return;

        try {
            if (action === 'encode') {
                const encoder = new TextEncoder();
                const data = encoder.encode(input);
                // Convertir Uint8Array a string binario para btoa
                let binary = '';
                data.forEach(b => binary += String.fromCharCode(b));
                outputEl.value = btoa(binary);
                showStatus('status-b64', 'Texto codificado correctamente', 'success');
            } else {
                const binary = atob(input);
                // Convertir string binario a Uint8Array para decodificar
                const bytes = new Uint8Array(binary.length);
                for (let i = 0; i < binary.length; i++) {
                    bytes[i] = binary.charCodeAt(i);
                }
                const decoder = new TextDecoder();
                outputEl.value = decoder.decode(bytes);
                showStatus('status-b64', 'Texto decodificado correctamente', 'success');
            }
        } catch (e) {
            outputEl.value = '';
            showStatus('status-b64', 'Error: Formato inv√°lido', 'error');
            console.error(e);
        }
    }

    // --- L√≥gica de Cifrado (XOR + Base64) ---
    
    function xorProcess(text, key) {
        if (!key) throw new Error("Se requiere una clave");
        
        let result = [];
        // Expandir la clave para que coincida con la longitud
        for (let i = 0; i < text.length; i++) {
            const textCode = text[i];
            const keyCode = key.charCodeAt(i % key.length);
            // Operaci√≥n XOR
            result.push(textCode ^ keyCode);
        }
        return new Uint8Array(result);
    }

    function processCrypto(action) {
        const input = document.getElementById('cryptoInput').value;
        const key = document.getElementById('cryptoKey').value;
        const outputEl = document.getElementById('cryptoOutput');

        if (!input || !key) {
            showStatus('status-crypto', 'Falta texto o clave', 'error');
            return;
        }

        try {
            if (action === 'encrypt') {
                // 1. Texto a Bytes (UTF-8)
                const encoder = new TextEncoder();
                const textBytes = encoder.encode(input);
                
                // 2. Aplicar XOR
                const xoredBytes = xorProcess(textBytes, key);
                
                // 3. Bytes a Base64 (para que sea legible/copiable)
                let binary = '';
                xoredBytes.forEach(b => binary += String.fromCharCode(b));
                outputEl.value = btoa(binary);
                
                showStatus('status-crypto', '¬°Encriptado con √©xito!', 'success');

            } else { // Decrypt
                // 1. Base64 a Bytes
                const binary = atob(input);
                const bytes = new Uint8Array(binary.length);
                for (let i = 0; i < binary.length; i++) {
                    bytes[i] = binary.charCodeAt(i);
                }

                // 2. Aplicar XOR (XOR es reversible con la misma clave)
                const decryptedBytes = xorProcess(bytes, key);

                // 3. Bytes a Texto
                const decoder = new TextDecoder();
                outputEl.value = decoder.decode(decryptedBytes);
                
                showStatus('status-crypto', '¬°Desencriptado con √©xito!', 'success');
            }
        } catch (e) {
            outputEl.value = '';
            showStatus('status-crypto', 'Error: Clave incorrecta o datos corruptos', 'error');
        }
    }
</script>

</body>
</html>
